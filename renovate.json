{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "enabledManagers": ["aqua", "github-actions", "dockerfile", "regex"],
  "aqua": {
    "fileMatch": ["^aqua\\.yaml$"]
  },
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all non-major docker dependencies"
    },
    {
      "groupName": "aqua dependencies",
      "matchManagers": ["aqua"]
    }
  ],
  "regexManagers": [
    {
      "description": "Update aqua-installer version in Dockerfile",
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "aqua-installer/(?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+)/aqua-installer"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "aquaproj/aqua-installer"
    },
    {
      "description": "Update aqua version in Dockerfile",
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "bash -s -- -v (?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "aquaproj/aqua"
    }
  ]
}
